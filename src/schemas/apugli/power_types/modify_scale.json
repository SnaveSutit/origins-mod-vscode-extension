			"items": {
				"$ref": "$ref(apoli:types/identifier)"
			}
		},
		"modifier": {
			"$ref": "$ref(apoli:types/attribute_modifier)"
		},
		"modifiers": {
			"type": "array",
			"items": {
				"$ref": "$ref(apoli:types/attribute_modifier)"
			}
		},
		"delay": {
			"type": "number",
			"default": 0
		}
	}
