{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://apugli.readthedocs.io/en/latest/types/power_types/action_on_target_death/",
	"type": "object",
	"required": ["bientity_action"],
	"properties": {
		"type": {
			"description": "### ⚠️ Requires [Apugli](https://apugli.readthedocs.io/en/latest/) to be installed! ⚠️\n\n",
			"markdownDescription": "### ⚠️ Requires [Apugli](https://apugli.readthedocs.io/en/latest/) to be installed! ⚠️\n\n"
		},
		"cooldown": {
			"type": "integer",
			"default": 1
		},
		"hud_render": {
			"$ref": "$ref(apoli:types/hud_render)"
		},
		"bientity_action": {
			"$ref": "$ref(apoli:bientity_action)"
		},
		"damage_condition": {
			"$ref": "$ref(apoli:damage_condition)"
		},
		"bientity_condition": {
			"$ref": "$ref(apoli:bientity_condition)"
		},
		"includes_prime_adversary": {
			"type": "boolean",
			"default": true
		}
	}
}
