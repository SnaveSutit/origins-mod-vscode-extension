{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://apugli.readthedocs.io/en/latest/types/power_types/action_when_harmed/",
	"type": "object",
	"required": ["hud_render"],
	"properties": {
		"type": {
			"description": "### ⚠️ Requires [Apugli](https://apugli.readthedocs.io/en/latest/) to be installed! ⚠️\n\n",
			"markdownDescription": "### ⚠️ Requires [Apugli](https://apugli.readthedocs.io/en/latest/) to be installed! ⚠️\n\n"
		},
		"cooldown": {
			"type": "integer",
			"default": 1
		},
		"hud_render": {
			"$ref": "$ref(apoli:types/hud_render)"
		},
		"damage_condition": {
			"$ref": "$ref(apoli:damage_condition)"
		},
		"entity_action": {
			"$ref": "$ref(apoli:entity_action)"
		},
		"bientity_action": {
			"$ref": "$ref(apoli:bientity_action)"
		},
		"bientity_condition": {
			"$ref": "$ref(apoli:bientity_condition)"
		},
		"amount_to_trigger": {
			"type": "number",
			"default": 1
		},
		"overflow": {
			"type": "boolean",
			"default": false
		}
	}
}
