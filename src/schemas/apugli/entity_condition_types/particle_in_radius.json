{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://apugli.readthedocs.io/en/latest/types/entity_condition_types/particle_in_radius/",
	"type": "object",
	"required": [
		"radius"
	],
	"properties": {
		"particle": {
			"$ref": "$ref(apoli:types/particle_effect)"
		},
		"particles": {
			"type": "array",
			"items": {
				"$ref": "$ref(apoli:types/particle_effect)"
			}
		},
		"radius": {
			"type": "number"
		},
		"comparison": {
			"default": ">=",
			"$ref": "$ref(apoli:types/comparison)"
		},
		"compare_to": {
			"type": "integer",
			"default": 1
		}
	}
}