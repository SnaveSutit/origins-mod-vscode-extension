{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://origins.readthedocs.io/en/latest/json/badge/",
	"allOf": [
		{
			"if": {
				"type": "string"
			},
			"then": {
				"$ref": "$ref(apoli:types/identifier)"
			}
		},
		{
			"if": {
				"type": "object"
			},
			"then": {
				"type": "object",
				"required": ["type"],

				"$IMPORT": {
					"type": "import_files_into_array",
					"path": "$ref(apoli:badge_types)",
					"output_key": "allOf",
					"schema_structure": {
						"if": {
							"required": ["type"],
							"properties": {
								"type": {
									"enum": ["apoli:$fileName", "origins:$fileName"]
								}
							}
						},
						"then": {
							"$ref": "$fileRef"
						}
					}
				},

				"allOf": []
			}
		}
	]
}
