		},
		"damage_type": {
			"$ref": "$ref(apoli:types/damage_source)"
		},
		"modifier": {
			"$ref": "$ref(apoli:types/attribute_modifier_arrayable)"
		},
		"modifiers": {
			"type": "array",
			"items": {
				"$ref": "$ref(apoli:types/attribute_modifier_arrayable)"
			}
		}
	}
}
