{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://origins.readthedocs.io/en/latest/types/power_types/attacker_action_when_hit/",
	"type": "object",
	"required": ["entity_action"],
	"properties": {
		"entity_action": {
			"$ref": "$ref(apoli:entity_action)"
		},
		"cooldown": {
			"type": "integer",
			"default": 1
		},
		"damage_condition": {
			"$ref": "$ref(apoli:damage_condition)"
		},
		"hud_render": {
			"$ref": "$ref(apoli:types/hud_render)"
		}
	}
}
