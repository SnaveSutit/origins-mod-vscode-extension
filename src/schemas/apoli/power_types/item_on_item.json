{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://origins.readthedocs.io/en/latest/types/power_types/item_on_item/",
	"type": "object",
	"properties": {
		"using_item_condition": {
			"$ref": "$ref(apoli:item_condition)"
		},
		"on_item_condition": {
			"$ref": "$ref(apoli:item_condition)"
		},
		"result": {
			"$ref": "$ref(apoli:types/item_stack)"
		},
		"result_from_on_stack": {
			"type": "integer",
			"default": 0
		},
		"using_item_action": {
			"$ref": "$ref(apoli:item_action)"
		},
		"on_item_action": {
			"$ref": "$ref(apoli:item_action)"
		},
		"result_item_action": {
			"$ref": "$ref(apoli:item_action)"
		},
		"entity_action": {
			"$ref": "$ref(apoli:entity_action)"
		},
		"click_type": {
			"enum": ["secondary", "primary"],
			"default": "secondary"
		}
	}
}
