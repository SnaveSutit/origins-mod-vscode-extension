{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://origins.readthedocs.io/en/latest/json/power/",
	"type": "object",
	"required": ["type"],
	"$IGNORED_PROPERTIES": [
		"type",
		"name",
		"description",
		"hidden",
		"condition",
		"loading_priority",
		"badges"
	],

	"$IMPORT": [
		{
			"type": "import_files_into_array",
			"path": "$ref(apoli:power_types)",
			"output_key": "allOf",
			"schema_structure": {
				"if": {
					"$IGNORED_PROPERTIES": ["type"],
					"required": ["type"],
					"properties": {
						"type": {
							"enum": ["apoli:$fileName", "origins:$fileName"]
						}
					}
				},
				"then": {
					"$ref": "$fileRef"
				}
			}
		},

		{
			"type": "import_files_into_array",
			"path": "$ref(apugli:power_types)",
			"output_key": "allOf",
			"schema_structure": {
				"if": {
					"$IGNORED_PROPERTIES": ["type"],
					"required": ["type"],
					"properties": {
						"type": {
							"const": "apugli:$fileName"
						}
					}
				},
				"then": {
					"$ref": "$fileRef"
				}
			}
		}
	],

	"allOf": []
}
