{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://origins.readthedocs.io/en/latest/types/item_condition_types/",
	"type": "object",
	"required": ["type"],

	"definitions": {
		"action": {
			"$ref": "$ref(apoli:item_action)"
		},
		"condition": {
			"$ref": "#"
		}
	},

	"$IMPORT": [
		{
			"type": "import_files_into_array",
			"path": "$ref(apoli:item_condition_types)",
			"output_key": "allOf",
			"schemaStructure": {
				"if": {
					"required": ["type"],
					"properties": {
						"type": {
							"enum": ["apoli:$$fileName", "origins:$$fileName"]
						}
					}
				},
				"then": {
					"$ref": "$$fileRef"
				}
			}
		},
		{
			"type": "import_file_contents_into_array",
			"path": "$ref(apoli:meta_condition_types)",
			"output_key": "allOf",
			"schemaStructure": {
				"if": {
					"required": ["type"],
					"properties": {
						"type": {
							"enum": ["apoli:$$fileName", "origins:$$fileName"]
						}
					}
				},
				"then": "$$fileRef"
			}
		}
	],

	"allOf": []
}
