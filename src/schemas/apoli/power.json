{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$docsUrl": "https://origins.readthedocs.io/en/latest/json/power/",
	"type": "object",
	"$IGNORED_PROPERTIES": ["type"],
	"required": ["type"],
	"properties": {
		"name": {
			"$ref": "$ref(apoli:types/text_component)"
		},
		"description": {
			"$ref": "$ref(apoli:types/text_component)"
		},
		"hidden": {
			"type": "boolean",
			"default": false
		},
		"condition": {
			"$ref": "$ref(apoli:entity_condition)"
		},
		"loading_priority": {
			"type": "integer",
			"default": 0
		},
		"badges": {
			"type": "array",
			"items": {
				"$ref": "$ref(apoli:badge)"
			}
		}
	},

	"$IMPORT": [
		{
			"type": "import_files_into_array",
			"path": "$ref(apoli:power_types)",
			"output_key": "allOf",
			"schema_structure": {
				"if": {
					"required": ["type"],
					"properties": {
						"type": {
							"enum": ["apoli:$fileName", "origins:$fileName"]
						}
					}
				},
				"then": {
					"$ref": "$fileRef"
				}
			}
		},

		{
			"type": "import_files_into_array",
			"path": "$ref(apugli:power_types)",
			"output_key": "allOf",
			"schema_structure": {
				"if": {
					"required": ["type"],
					"properties": {
						"type": {
							"const": "apugli:$fileName"
						}
					}
				},
				"then": {
					"$ref": "$fileRef"
				}
			}
		}
	],

	"allOf": []
}
