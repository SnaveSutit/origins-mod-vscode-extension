{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"type"
	],
	"allOf": [
		{
			"if": {
				"required": [
					"type"
				],
				"properties": {
					"type": {
						"enum": [
							"apoli:crafting_recipe",
							"origins:crafting_recipe"
						]
					}
				}
			},
			"then": {
				"required": [
					"sprite",
					"recipe"
				],
				"properties": {
					"sprite": {
						"$ref": "types/identifier.json"
					},
					"recipe": {
						"$ref": "types/crafting_recipe.json"
					},
					"suffix": {
						"$ref": "types/text_component.json"
					},
					"prefix": {
						"$ref": "types/text_component.json"
					}
				}
			}
		},
		{
			"if": {
				"required": [
					"type"
				],
				"properties": {
					"type": {
						"enum": [
							"apoli:keybind",
							"origins:keybind"
						]
					}
				}
			},
			"then": {
				"required": [
					"sprite",
					"text"
				],
				"properties": {
					"sprite": {
						"$ref": "types/identifier.json"
					},
					"text": {
						"$ref": "types/text_component.json"
					}
				}
			}
		},
		{
			"if": {
				"required": [
					"type"
				],
				"properties": {
					"type": {
						"enum": [
							"apoli:sprite",
							"origins:sprite"
						]
					}
				}
			},
			"then": {
				"required": [
					"sprite"
				],
				"properties": {
					"sprite": {
						"$ref": "types/identifier.json"
					}
				}
			}
		},
		{
			"if": {
				"required": [
					"type"
				],
				"properties": {
					"type": {
						"enum": [
							"apoli:tooltip",
							"origins:tooltip"
						]
					}
				}
			},
			"then": {
				"required": [
					"sprite",
					"text"
				],
				"properties": {
					"sprite": {
						"$ref": "types/identifier.json"
					},
					"text": {
						"$ref": "types/text_component.json"
					}
				}
			}
		}
	]
}