{
	"allOf": [
		{
			"if": {
				"type": "string"
			},
			"then": {
				"$ref": "types/identifier.json"
			}
		},
		{
			"if": {
				"type": "object"
			},
			"then": {
				"type": "object",
				"required": [
					"type"
				],
				"allOf": [
					{
						"if": {
							"required": [
								"type"
							],
							"properties": {
								"type": {
									"enum": [
										"apoli:crafting_recipe",
										"origins:crafting_recipe"
									],
									"description": "The namespace and ID of the desired badge type.",
									"markdownDescription": "The namespace and ID of the desired badge type."
								}
							}
						},
						"then": {
							"$ref": "badge_types/crafting_recipe.json"
						}
					},
					{
						"if": {
							"required": [
								"type"
							],
							"properties": {
								"type": {
									"enum": [
										"apoli:keybind",
										"origins:keybind"
									],
									"description": "The namespace and ID of the desired badge type.",
									"markdownDescription": "The namespace and ID of the desired badge type."
								}
							}
						},
						"then": {
							"$ref": "badge_types/keybind.json"
						}
					},
					{
						"if": {
							"required": [
								"type"
							],
							"properties": {
								"type": {
									"enum": [
										"apoli:sprite",
										"origins:sprite"
									],
									"description": "The namespace and ID of the desired badge type.",
									"markdownDescription": "The namespace and ID of the desired badge type."
								}
							}
						},
						"then": {
							"$ref": "badge_types/sprite.json"
						}
					},
					{
						"if": {
							"required": [
								"type"
							],
							"properties": {
								"type": {
									"enum": [
										"apoli:tooltip",
										"origins:tooltip"
									],
									"description": "The namespace and ID of the desired badge type.",
									"markdownDescription": "The namespace and ID of the desired badge type."
								}
							}
						},
						"then": {
							"$ref": "badge_types/tooltip.json"
						}
					}
				]
			}
		}
	]
}